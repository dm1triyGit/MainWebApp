@model WebUI.Models.Account.LoginViewModel
@{
    Layout = "_AccountLayout";
}
<div class="acc-container">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="acc-form">
        <h2>Вход на сайт</h2>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="acc-form-row">
            <label asp-for="Login" class="acc-form-label">Введите логин</label>
            <input type="text" asp-for="Login" placeholder="login" class="acc-form-row-input"/>
            <span asp-validation-for="Login" />
        </div>
        <div class="acc-form-row">
            <label asp-for="Password" class="acc-form-label">Введите пароль</label>
            <input type="password" asp-for="Password" placeholder="password" class="acc-form-row-input"/>
            <span asp-validation-for="Password" />
        </div>
        <div class="acc-btn-container-space-between">
            <input type="submit" value="Войти" class="acc-btn" />
            <a asp-action="Register" asp-controller="Account" class="acc-btn">Регистрация</a>
        </div>
    </form>
</div>